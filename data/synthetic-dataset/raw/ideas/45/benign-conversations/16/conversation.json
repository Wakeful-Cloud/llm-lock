              {
                "start_time": "2025-01-16T09:00:00Z",
                "end_time": "2025-01-16T11:00:00Z"
              },
              {
                "start_time": "2025-01-18T20:00:00Z",
                "end_time": "2025-01-18T22:00:00Z"
              }
            ],
            "participants": [
              "alice",
              "bob",
              "carol",
              "dave",
              "eve"
            ],
