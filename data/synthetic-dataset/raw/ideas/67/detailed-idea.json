{
  "name": "StageVision AI",
  "description": "StageVision AI is an autonomous virtual\u2011home\u2011staging service. Real\u2011estate agents upload property photos or an address, select a design style, and the LLM orchestrates photo retrieval, room analysis, trend research, catalog search, AI\u2011based image synthesis and cloud storage to deliver ready\u2011to\u2011publish staged images for listings.",
  "tools": [
    {
      "name": "fetch_property_photos",
      "description": "Retrieves property images based on a full street address or a list of pre\u2011hosted image URLs supplied by the user. Returns a JSON object with a field `photo_urls` containing an array of accessible image URLs.",
      "parameters": {
        "type": "object",
        "properties": {
          "address": {
            "type": "string",
            "description": "Full street address of the property (e.g., \"123 Main St, Springfield, IL\")."
          },
          "photo_urls": {
            "type": "array",
            "description": "List of image URLs already hosted online.",
            "items": {
              "type": "string",
              "format": "uri"
            }
          }
        },
        "required": [],
        "additionalProperties": false
      }
    },
    {
      "name": "analyze_room_layout",
      "description": "Runs computer\u2011vision on a single room image to extract dimensions, wall colour, floor type, existing furniture and suggested placement zones. Returns a JSON object with those attributes.",
      "parameters": {
        "type": "object",
        "properties": {
          "image_url": {
            "type": "string",
            "format": "uri",
            "description": "URL of the room photo to be analysed."
          }
        },
        "required": [
          "image_url"
        ],
        "additionalProperties": false
      }
    },
    {
      "name": "get_design_trends",
      "description": "Fetches the latest interior\u2011design trends for a given style and season. Returns a JSON object containing colour palette, recommended materials and key furniture types.",
      "parameters": {
        "type": "object",
        "properties": {
          "style": {
            "type": "string",
            "description": "Desired design style (e.g., \"modern minimal\", \"scandinavian\")."
          },
          "season": {
            "type": "string",
            "description": "Season or quarter to tailor trends (e.g., \"spring 2025\")."
          }
        },
        "required": [
          "style"
        ],
        "additionalProperties": false
      }
    },
    {
      "name": "search_furniture_catalog",
      "description": "Searches partnered furniture supplier catalogs for items matching the requested style, category, colour and optional price ceiling. Returns a JSON object with an `items` array where each element includes a `catalog_id`, a thumbnail URL and price.",
      "parameters": {
        "type": "object",
        "properties": {
          "style": {
            "type": "string",
            "description": "Design style to match."
          },
          "category": {
            "type": "string",
            "description": "Furniture category (e.g., \"sofa\", \"coffee table\")."
          },
          "color": {
            "type": "string",
            "description": "Preferred colour (optional)."
          },
          "price_max": {
            "type": "number",
            "description": "Maximum price in USD (optional)."
          }
        },
        "required": [
          "style",
          "category"
        ],
        "additionalProperties": false
      }
    },
    {
      "name": "generate_staged_image",
      "description": "Calls a depth\u2011aware image\u2011synthesis model to insert the selected furniture items into the original room photo. Returns a base\u201164\u2011encoded PNG of the staged scene.",
      "parameters": {
        "type": "object",
        "properties": {
          "base_image_url": {
            "type": "string",
            "format": "uri",
            "description": "URL of the original empty\u2011room photo."
          },
          "furniture_items": {
            "type": "array",
            "description": "List of furniture objects to render into the scene.",
            "items": {
              "type": "object",
              "properties": {
                "catalog_id": {
                  "type": "string",
                  "description": "ID of the furniture item from the catalog."
                },
                "position": {
                  "type": "object",
                  "description": "2\u2011D floor\u2011plan coordinates expressed as percentages of image width/height.",
                  "properties": {
                    "x": {
                      "type": "number",
                      "description": "Horizontal offset 0\u2011100."
                    },
                    "y": {
                      "type": "number",
                      "description": "Vertical offset 0\u2011100."
                    }
                  },
                  "required": [
                    "x",
                    "y"
                  ]
                },
                "scale": {
                  "type": "number",
                  "description": "Relative size factor (default 1.0)."
                },
                "rotation": {
                  "type": "number",
                  "description": "Rotation in degrees clockwise (default 0)."
                }
              },
              "required": [
                "catalog_id",
                "position"
              ],
              "additionalProperties": false
            }
          },
          "output_resolution": {
            "type": "string",
            "description": "Desired output size, e.g., \"1024x768\". Optional."
          }
        },
        "required": [
          "base_image_url",
          "furniture_items"
        ],
        "additionalProperties": false
      }
    },
    {
      "name": "store_image",
      "description": "Uploads a base\u201164\u2011encoded PNG/JPEG to cloud storage and returns a publicly accessible URL. Optional folder parameter lets you organise images.",
      "parameters": {
        "type": "object",
        "properties": {
          "image_base64": {
            "type": "string",
            "description": "Base\u201164 string of the generated image."
          },
          "folder": {
            "type": "string",
            "description": "Folder path for organization (optional)."
          }
        },
        "required": [
          "image_base64"
        ],
        "additionalProperties": false
      }
    }
  ],
  "examples": [
    {
      "description": "User provides an address and requests a modern\u2011minimal living\u2011room staging. The assistant fetches photos, analyses the layout, gets current trends, selects sofa, coffee table and lamp, generates a staged image and returns a shareable URL.",
      "messages": [
        {
          "role": "system",
          "content": "You are StageVision AI, an autonomous virtual\u2011staging assistant. Use the provided tools to obtain photos, analyse rooms, lookup trends, find furniture, generate staged renders and store the results."
        },
        {
          "role": "user",
          "content": "I have a listing at 123 Main St, Springfield. Please give me a modern\u2011minimal living\u2011room staging."
        },
        {
          "role": "assistant",
          "content": "Fetching property photos for the address...",
          "tool_calls": [
            {
              "id": "fetch_property_photos_1a2b3c",
              "name": "fetch_property_photos",
              "arguments": {
                "address": "123 Main St, Springfield"
              }
            }
          ]
        },
        {
          "role": "tool",
          "tool_call_id": "fetch_property_photos_1a2b3c",
          "content": "{\"photo_urls\": [\"https://cdn.example.com/prop123/living1.jpg\", \"https://cdn.example.com/prop123/living2.jpg\"]}"
        },
        {
          "role": "assistant",
          "content": "Analyzing the first living\u2011room photo to understand dimensions and existing features.",
          "tool_calls": [
            {
              "id": "analyze_room_layout_4d5e6f",
              "name": "analyze_room_layout",
