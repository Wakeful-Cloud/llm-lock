          "id": "fetch_emission_inventory_001",
          "name": "fetch_emission_inventory",
          "arguments": {
            "region": "USA",
            "year": 2022
          }
        }
      ]
    },
    {
      "role": "tool",
      "tool_call_id": "fetch_emission_inventory_001",
      "content": "{\"baseline_year\":2022,\"total_co2e_mt\":5200,\"sectors\":{\"energy\":3000,\"transport\":900,\"industry\":800,\"agriculture\":500,\"waste\":200}}"
