{
  "name": "SmartInventoryForecaster",
  "description": "An agentic LLM that ingests sales history, promotional calendars, and seasonality indexes to produce accurate short\u2011term inventory forecasts, generate a visual report, and notify stakeholders of potential stock shortages.",
  "tools": [
    {
      "name": "load_sales_data",
      "description": "Retrieves historic sales quantities for a given product between two dates from the ERP database.",
      "parameters": {
        "type": "object",
        "properties": {
          "product_id": {
            "type": "string",
            "description": "Unique identifier of the product (SKU)."
          },
          "start_date": {
            "type": "string",
            "format": "date",
            "description": "Start of the sales history window (inclusive)."
          },
          "end_date": {
            "type": "string",
            "format": "date",
            "description": "End of the sales history window (inclusive)."
          }
        },
        "required": [
          "product_id",
          "start_date",
          "end_date"
        ],
        "additionalProperties": false
      }
    },
    {
      "name": "load_promotions_calendar",
      "description": "Pulls all promotions scheduled for a product within a date range, including discount depth and promotion type.",
      "parameters": {
        "type": "object",
        "properties": {
          "product_id": {
            "type": "string",
            "description": "The product SKU to query."
          },
          "start_date": {
            "type": "string",
            "format": "date",
            "description": "Start of the calendar window (inclusive)."
          },
          "end_date": {
            "type": "string",
            "format": "date",
            "description": "End of the calendar window (inclusive)."
          }
        },
        "required": [
          "product_id",
          "start_date",
          "end_date"
        ],
        "additionalProperties": false
      }
    },
    {
      "name": "load_seasonality_index",
      "description": "Fetches a numeric seasonality index (e.g., multiplier) for the product's category over the requested period.",
      "parameters": {
        "type": "object",
        "properties": {
          "product_category": {
            "type": "string",
            "description": "Category name or code."
          },
          "start_date": {
            "type": "string",
            "format": "date",
            "description": "Start of the period."
          },
          "end_date": {
            "type": "string",
            "format": "date",
            "description": "End of the period."
          }
        },
        "required": [
          "product_category",
          "start_date",
          "end_date"
        ],
        "additionalProperties": false
      }
    },
    {
      "name": "forecast_inventory",
      "description": "Runs a time\u2011series model using sales history, promotion schedule, and seasonality to predict daily inventory demand for a future horizon.",
      "parameters": {
        "type": "object",
        "properties": {
          "product_id": {
            "type": "string",
            "description": "SKU of the product."
          },
          "horizon_days": {
            "type": "integer",
            "minimum": 1,
            "description": "Number of future days to forecast."
          },
          "sales_data": {
            "type": "array",
            "items": {
              "type": "number"
            },
            "description": "Historical daily sales quantities (ordered by date)."
          },
          "promotion_data": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "date": {
                  "type": "string",
                  "format": "date",
                  "description": "Date of the promotion."
                },
                "discount_pct": {
                  "type": "number",
                  "description": "Percentage discount applied that day."
                }
              },
              "required": [
                "date",
                "discount_pct"
              ],
              "additionalProperties": false
            },
            "description": "List of promotions affecting demand."
          },
          "seasonality_data": {
            "type": "array",
            "items": {
              "type": "number"
            },
            "description": "Daily seasonality multipliers for the forecast horizon."
          }
        },
        "required": [
          "product_id",
          "horizon_days",
          "sales_data",
          "promotion_data",
          "seasonality_data"
        ],
        "additionalProperties": false
      }
    },
    {
      "name": "generate_report",
      "description": "Creates a PDF/HTML report that visualises the forecast, confidence bands and recommended reorder quantities.",
      "parameters": {
        "type": "object",
        "properties": {
          "product_id": {
            "type": "string",
            "description": "SKU of the product."
          },
          "forecast": {
            "type": "array",
            "items": {
              "type": "number"
            },
            "description": "Predicted daily demand for the horizon."
          },
          "horizon_days": {
            "type": "integer",
            "description": "Length of the forecast window."
          }
        },
        "required": [
          "product_id",
          "forecast",
          "horizon_days"
        ],
        "additionalProperties": false
      }
    },
    {
      "name": "send_alert",
      "description": "Sends an email or Slack message to a stakeholder with a custom subject and body.",
      "parameters": {
        "type": "object",
        "properties": {
          "recipient": {
            "type": "string",
            "description": "Email address or Slack channel identifier."
          },
          "subject": {
            "type": "string",
            "description": "Short title of the alert."
          },
          "body": {
            "type": "string",
            "description": "Full message body, may contain links to the report."
          }
        },
        "required": [
          "recipient",
          "subject",
          "body"
        ],
        "additionalProperties": false
      }
    }
  ],
