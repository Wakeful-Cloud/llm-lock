          "id": "fetch_course_data_1a2b3c",
          "name": "fetch_course_data",
          "arguments": {
            "term": "Fall 2025"
          }
        },
        {
          "id": "fetch_room_availability_4d5e6f",
          "name": "fetch_room_availability",
          "arguments": {
            "term": "Fall 2025"
          }
        },
        {
          "id": "fetch_faculty_preferences_7g8h9i",
          "name": "fetch_faculty_preferences",
          "arguments": {
            "term": "Fall 2025"
          }
        }
      ]
