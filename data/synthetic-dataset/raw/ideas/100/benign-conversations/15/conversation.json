            "rooms": [
              {
                "room_id": "B101",
                "capacity": 40,
                "equipment": [
                  "projector",
                  "video_conference"
                ],
                "available_slots": [
                  "Mon 10-12",
                  "Tue 14-16",
                  "Wed 10-12",
                  "Thu 14-16"
                ]
              }
            ],
            "faculty": [
              {
                "faculty_id": "F123",
                "name": "Dr. Jane Smith",
                "preferred_times": [
                  "Mon 10-12",
                  "Wed 10-12"
