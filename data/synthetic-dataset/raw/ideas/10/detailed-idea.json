                "city": "Tokyo",
                "date": "2025-06-10"
              }
            },
            {
              "id": "get_weather_2025-06-11",
              "name": "get_weather",
              "arguments": {
                "city": "Tokyo",
                "date": "2025-06-11"
              }
            },
            {
              "id": "get_events_2025-06-11",
              "name": "get_local_events",
              "arguments": {
                "city": "Tokyo",
                "date": "2025-06-11"
              }
            },
            {
              "id": "get_weather_2025-06-12",
              "name": "get_weather",
              "arguments": {
                "city": "Tokyo",
                "date": "2025-06-12"
              }
            },
            {
              "id": "get_events_2025-06-12",
              "name": "get_local_events",
              "arguments": {
                "city": "Tokyo",
                "date": "2025-06-12"
              }
            },
            {
              "id": "get_weather_2025-06-13",
              "name": "get_weather",
              "arguments": {
                "city": "Tokyo",
                "date": "2025-06-13"
              }
            },
            {
              "id": "get_events_2025-06-13",
              "name": "get_local_events",
              "arguments": {
                "city": "Tokyo",
                "date": "2025-06-13"
              }
            },
            {
              "id": "get_weather_2025-06-14",
              "name": "get_weather",
              "arguments": {
                "city": "Tokyo",
                "date": "2025-06-14"
              }
            },
            {
              "id": "get_events_2025-06-14",
              "name": "get_local_events",
              "arguments": {
