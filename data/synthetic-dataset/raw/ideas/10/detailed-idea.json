{
  "name": "VoyagePlanner AI",
  "description": "An agentic LLM that designs personalized travel itineraries, queries flight and hotel APIs, suggests daily activities, and can auto\u2011book reservations on behalf of the user, all while respecting budget and preference constraints.",
  "tools": [
    {
      "name": "search_flights",
      "description": "Searches flight options given origin, destination, departure and return dates, cabin class and optional filters. Returns a list of flight itineraries with price, airline, departure/arrival times and a unique flight_id.",
      "parameters": {
        "type": "object",
        "properties": {
          "origin": {
            "type": "string",
            "description": "IATA airport code of the departure airport (e.g., JFK)."
          },
          "destination": {
            "type": "string",
            "description": "IATA airport code of the arrival airport (e.g., NRT)."
          },
          "depart_date": {
            "type": "string",
            "format": "date",
            "description": "Planned departure date (YYYY-MM-DD)."
          },
          "return_date": {
            "type": "string",
            "format": "date",
            "description": "Planned return date (YYYY-MM-DD)."
          },
          "cabin_class": {
            "type": "string",
            "enum": [
              "economy",
              "premium_economy",
              "business",
              "first"
            ],
            "description": "Desired cabin class."
          },
          "max_price": {
            "type": "number",
            "description": "Maximum total price user is willing to pay (optional)."
          }
        },
        "required": [
          "origin",
          "destination",
          "depart_date",
          "return_date",
          "cabin_class"
        ],
        "additionalProperties": false
      }
    },
    {
      "name": "search_hotels",
      "description": "Queries hotel availability for a city and date range, returning a list of hotels with nightly price, star rating, amenities and a unique hotel_id.",
      "parameters": {
        "type": "object",
        "properties": {
          "city": {
            "type": "string",
            "description": "Name of the city (e.g., Tokyo)."
          },
          "check_in": {
            "type": "string",
            "format": "date",
            "description": "Check\u2011in date (YYYY-MM-DD)."
          },
          "check_out": {
            "type": "string",
            "format": "date",
            "description": "Check\u2011out date (YYYY-MM-DD)."
          },
          "guests": {
            "type": "integer",
            "minimum": 1,
            "description": "Number of guests."
          },
          "max_price": {
            "type": "number",
            "description": "Maximum nightly price (optional)."
          }
        },
        "required": [
          "city",
          "check_in",
          "check_out",
          "guests"
        ],
        "additionalProperties": false
      }
    },
    {
      "name": "get_weather",
      "description": "Provides a short\u2011term weather forecast for a given city and date, including temperature range and precipitation chance.",
      "parameters": {
        "type": "object",
        "properties": {
          "city": {
            "type": "string",
            "description": "City name (e.g., Tokyo)."
          },
          "date": {
            "type": "string",
            "format": "date",
            "description": "Date for which the forecast is requested (YYYY-MM-DD)."
          }
        },
        "required": [
          "city",
          "date"
        ],
        "additionalProperties": false
      }
    },
    {
      "name": "get_local_events",
      "description": "Lists major attractions, events, and activity recommendations for a city on a specific date. Returns a short list with brief descriptions.",
      "parameters": {
        "type": "object",
        "properties": {
          "city": {
            "type": "string",
            "description": "City name (e.g., Tokyo)."
          },
          "date": {
            "type": "string",
            "format": "date",
            "description": "Date of interest (YYYY-MM-DD)."
          }
        },
        "required": [
          "city",
          "date"
        ],
        "additionalProperties": false
      }
    },
    {
      "name": "book_flight",
      "description": "Attempts to purchase the selected flight using stored payment credentials. Returns a booking reference and ticket details on success.",
      "parameters": {
        "type": "object",
        "properties": {
          "flight_id": {
            "type": "string",
            "description": "Unique identifier of the flight option returned by search_flights."
          },
          "passenger_info": {
            "type": "object",
            "description": "Details of the passenger (name, passport number, date of birth).",
            "properties": {
              "first_name": {
                "type": "string"
              },
              "last_name": {
                "type": "string"
              },
              "passport_number": {
                "type": "string"
              },
              "date_of_birth": {
                "type": "string",
                "format": "date"
              }
            },
            "required": [
              "first_name",
              "last_name",
              "passport_number",
              "date_of_birth"
            ],
            "additionalProperties": false
          },
          "payment_token": {
            "type": "string",
            "description": "Reference to a stored payment method."
          }
        },
        "required": [
          "flight_id",
          "passenger_info",
          "payment_token"
        ],
        "additionalProperties": false
      }
    },
    {
      "name": "book_hotel",
      "description": "Books a selected hotel room for the specified dates and guests, using stored payment credentials. Returns a reservation confirmation code.",
      "parameters": {
        "type": "object",
        "properties": {
          "hotel_id": {
            "type": "string",
            "description": "Unique identifier of the hotel option returned by search_hotels."
          },
          "check_in": {
            "type": "string",
            "format": "date",
            "description": "Check\u2011in date (YYYY-MM-DD)."
          },
          "check_out": {
            "type": "string",
            "format": "date",
            "description": "Check\u2011out date (YYYY-MM-DD)."
          },
          "guests": {
            "type": "integer",
            "minimum": 1,
            "description": "Number of guests."
          },
          "room_type": {
            "type": "string",
            "description": "Preferred room type (e.g., standard, deluxe)."
          },
          "payment_token": {
            "type": "string",
            "description": "Reference to a stored payment method."
          }
        },
        "required": [
          "hotel_id",
          "check_in",
          "check_out",
          "guests",
          "room_type",
          "payment_token"
        ],
        "additionalProperties": false
      }
    },
    {
      "name": "store_user_preferences",
      "description": "Saves or updates a user\u2019s travel preferences such as budget, activity types, accessibility needs, and dietary restrictions. Returns success status.",
      "parameters": {
        "type": "object",
        "properties": {
          "user_id": {
            "type": "string",
            "description": "Unique identifier of the user."
          },
          "preferences": {
            "type": "object",
            "description": "Key\u2011value pairs describing user preferences.",
            "additionalProperties": {
              "type": "string"
            }
          }
        },
        "required": [
          "user_id",
          "preferences"
        ],
        "additionalProperties": false
      }
    }
  ],
  "examples": [
    {
      "description": "User asks for a 5\u2011day Tokyo trip itinerary with a $2000 budget. The assistant searches flights and hotels, fetches weather and event data, and returns a draft itinerary with options.",
      "messages": [
        {
          "role": "system",
          "content": "You are VoyagePlanner AI, an expert travel planning assistant. Use the provided tools to gather flight, hotel, weather, and event information, respect the user\u2019s budget and preferences, and produce a clear day\u2011by\u2011day itinerary. Only book when explicitly instructed."
        },
        {
          "role": "user",
          "content": "I want to visit Tokyo from 2025-06-10 to 2025-06-15, departing from JFK. My total budget is $2000. I prefer economy flights and 3\u2011star hotels. Please give me a day\u2011by\u2011day itinerary and show flight & hotel options."
        },
        {
          "role": "assistant",
          "content": "Sure, let me look up some flight and hotel options for you.",
          "tool_calls": [
            {
              "id": "search_flights_a1b2c3",
              "name": "search_flights",
              "arguments": {
                "origin": "JFK",
                "destination": "NRT",
                "depart_date": "2025-06-10",
                "return_date": "2025-06-15",
                "cabin_class": "economy",
                "max_price": 1200
              }
            },
            {
              "id": "search_hotels_d4e5f6",
              "name": "search_hotels",
              "arguments": {
                "city": "Tokyo",
                "check_in": "2025-06-10",
                "check_out": "2025-06-15",
                "guests": 1,
                "max_price": 150
              }
            }
          ]
        },
        {
          "role": "tool",
          "tool_call_id": "search_flights_a1b2c3",
          "content": "{\"flights\":[{\"flight_id\":\"FL12345\",\"airline\":\"Delta\",\"depart_time\":\"2025-06-10T08:30\",\"arrival_time\":\"2025-06-11T11:45\",\"price\":1150},{\"flight_id\":\"FL67890\",\"airline\":\"United\",\"depart_time\":\"2025-06-10T14:20\",\"arrival_time\":\"2025-06-11T17:35\",\"price\":1190} ]}"
        },
        {
          "role": "tool",
          "tool_call_id": "search_hotels_d4e5f6",
          "content": "{\"hotels\":[{\"hotel_id\":\"HT1001\",\"name\":\"Hotel Sunroute Plaza Shinjuku\",\"stars\":3,\"price_per_night\":130,\"amenities\":[\"free_wifi\",\"breakfast_included\"]},{\"hotel_id\":\"HT1002\",\"name\":\"Shibuya Granbell Hotel\",\"stars\":3,\"price_per_night\":115,\"amenities\":[\"free_wifi\"]} ]}"
        },
        {
          "role": "assistant",
          "content": "I found two economy flights within your budget and a couple of 3\u2011star hotels. Next, I\u2019ll check the weather and local events for each day.",
          "tool_calls": [
            {
              "id": "get_weather_2025-06-10",
              "name": "get_weather",
              "arguments": {
